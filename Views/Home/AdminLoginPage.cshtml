@model Hospital.Models.Admin
<!DOCTYPE html>


<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>LazyCoder || sumit</title>
  <style type="text/css">
        

 
  </style>

</head>


<body>
 @Html.Partial("navbar")
  <br>
  <br>
  <br>
  <br>



    <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
        
            <div asp-validation-summary="All" class="text-danger"></div>
          <div class="divider d-flex align-items-center my-4">
            <h2 class="text-center fw-bold mx-3 mb-0">Admin Login</h2>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <input asp-for="Username"  id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            <label asp-for="Username" class="form-label" for="form3Example3"></label>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
           <input asp-for="Password"  id="form3Example3" class="form-control form-control-lg"
              placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
              <label asp-for="Password" class="form-label" for="form3Example3"></label>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->

            <div class="form-check mb-0">
                <div class="checkbox">
            <label asp-for="RememberMe">
                        <input asp-for="RememberMe"/>
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label> 
                    </div>
                </div>
          
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="~/Home/AdminSignUp"
                class="link-danger">Register</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>


    <br><br>
@Html.Partial("footer")
</body>

</html>