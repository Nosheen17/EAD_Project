@model IEnumerable<Hospital.Models.Doctor>

@{
    ViewData["Title"] = "admin_doc_view";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
   <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css" />
     <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
  <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


   <style>
       img {
      width: 100px;
      border-radius: 50%;
      overflow: hidden;
      border: 4px solid #ffea92;
      box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.2);
    }
       a:link {
      text-decoration: none;
    }

    .menu {
      top: 50px;
    }

    h6 {
      color: white;
    }

       
   
   </style>
   @{
	ViewBag.Title="Dashboard";
}
@Html.Partial("admin_base")

</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                     <img src="../images/adminpropic.png" />
                      <br><br>
      <h6 style="color:black;">Admin</h6>
  
             </div>
            <div class="list-group list-group-flush my-3">
                <a href="/Home/admin_dashboard" class="list-group-item list-group-item-action bg-transparent second-text active"><i
                        class="fas fa-tachometer-alt me-2"></i>Dashboard</a>
                  <a href="/Home/admin_dashboard_doctor" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-user-md me-2"></i>Doctors</a>
                <a href="/Home/admin_pat_view" class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-procedures me-2"></i>Patients</a>
                <a href="/Home/HomePage" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Logout</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Admin Dashboard</h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

               
            </nav>

                     <div class="container">
                        <div class="panel panel-primary">
                              <div class="panel-heading">
                                  <h6 class="panel-title" style="text-align:center;">Doctors</h6>
                              </div>
                             <table class="table table-hover" id="dev-table">
                              <thead>
                               <tr>

                                <th>
                @Html.DisplayNameFor(model => model.Doc_Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doc_Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departmant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
           
                                <th>Update</th>
                                <th>Delete</th>
                                 <th></th>
                               </tr>
                              </thead>
                              <tbody>
                               

                               @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doc_Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doc_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departmant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                <a class="btn btn-primary btn-xs" asp-action="Edit" asp-route-id="@item.Id"><span class="glyphicon glyphicon-edit"></span></a> 
            </td>
            <td>
                <a  class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
           
        </tr>
}

                                                   
                              </tbody>
                                  
                             </table>
                        </div>
                     </div>


        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
</body>

</html>